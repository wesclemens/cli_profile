[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  pager = less
[user]
  name = William Clemens
  email = wesclemens@gmail.com
[advice]
  statusHints = false
[branch]
  autosetupmerge = true
[color]
  ui     = auto
[alias]
  st     = status
  co     = checkout
  br     = branch
  rb     = rebase
  rt     = remote
  ru     = remote update
  rs     = remote show
  sm     = submodule
  smu    = submodule update
[format]
  pretty = fuller
[gc]
  auto   = 1
[rerere]
  enabled = 1
[merge]
  tool   = vimdiff
  stat = true
[diff]
  mnemonicprefix = true
[log]
  decorate = full
[init]
	templatedir = ~/.git_template
