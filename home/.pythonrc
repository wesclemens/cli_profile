#!/usr/bin/env python
try:
    import readline
except ImportError:
    print("Module readline not available.")
else:
    import rlcompleter
    import os
    import atexit
    readline.parse_and_bind("tab: complete")
    histfile = os.path.expanduser("~/.pyhist")
    try:
        readline.read_history_file(histfile)
    except IOError:
        pass
    atexit.register(readline.write_history_file, histfile)
    del os, histfile
